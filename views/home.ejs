<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= locals.title%>
        </title>
        <script src="https://kit.fontawesome.com/95749693e7.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="heading">
            <i class="fas fa-address-book"></i>
             My Contact List
        </h1>

        <div id="container">
            <ul>
                   
                <% for (let i of contact_list) { %> 
                   <li class="contact"> 
                        <div class="details">
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </div>
                    <div class="delete">
                        <a href="/delete-contact/?id=<%= i.id %>">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </li>
                <% } %>
            </ul>
        </div>

        <form id="add-contact" action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter Name..." required autocomplete="off">
            <input type="number" name="phone" placeholder="Enter Mobile Number" required autocomplete="off">
            <button type="submit">Add</button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>